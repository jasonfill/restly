div.accordion.affix-top#accordionsidebar

  div.accordion-group
    div.accordion-heading
      a.accordion-toggle(data-toggle='collapse',data-parent='#accordionsidebar',href='#collapseThree',style='outline:none')
        i.icon-chevron-right.pull-right 
        span Create Calls - HTTP POST
    div#collapseThree.accordion-body.collapse
      div.accordion-inner
        ul
          each apicall in routes
            if apicall.method == 'post'
              li
                a(href='##{apicall.method}-#{apicall.endpoint}' title='#{apicall.endpoint}') #{apicall.title}
            
